<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <!-- Circle container -->

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/square_pomodoro_frame"

        android:gravity="center">

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="25:00"
            android:textSize="50sp"
            android:textStyle="bold" />

    </FrameLayout>

    <Button
        android:id="@+id/btnPomodoro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pomodoro (25 min)"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnShortBreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Short Break (5 min)"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnLongBreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Long Break (15 min)"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnPause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnResetTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/red_soft"
        android:textColor="@color/white"/>

</LinearLayout>
