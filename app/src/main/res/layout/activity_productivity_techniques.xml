            android:layout_height="wrap_content"
            android:text="Focus"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- 4-7-8 Breathing -->
