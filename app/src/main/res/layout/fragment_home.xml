<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ROOM BACKGROUND (STATIC) -->
        <com.example.cuby.ui.room.RoomBackgroundView
            android:id="@+id/roomBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <!-- FOREGROUND UI -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!-- GREETING (TOP LEFT) -->
        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi there!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- SPEECH BUBBLE -->
        <TextView
            android:id="@+id/tvCubyBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_speech_bubble"
            android:padding="12dp"
            android:text="Hello!"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvGreeting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- MOOD BUTTONS (TELL-TALE) -->
        <LinearLayout
            android:id="@+id/layoutMoodButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvCubyBubble"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCalm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜Œ Calm"
                style="@style/SecondaryButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOkay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ™‚ Okay"
                style="@style/SecondaryButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜´ Tired"
                style="@style/SecondaryButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOverwhelmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜£ Overwhelmed"
                style="@style/SecondaryButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHappy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜Š Happy"
                style="@style/SecondaryButton"/>
        </LinearLayout>

        <View
            android:id="@+id/cubyShadow"
            android:layout_width="140dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_shadow_oval"
            android:alpha="0.35"
            android:elevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/ivCuby"
            app:layout_constraintStart_toStartOf="@id/ivCuby"
            app:layout_constraintEnd_toEndOf="@id/ivCuby"
            android:translationY="-20dp"/>


        <ImageView
            android:id="@+id/ivCuby"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="100dp"
            android:elevation="4dp"
            android:src="@drawable/cuby_idle"
            app:layout_constraintBottom_toTopOf="@id/bottomBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/floatingActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_round_icon"
                android:src="@drawable/ic_settings"
                android:contentDescription="Settings"/>

            <ImageButton
                android:id="@+id/btnChat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_round_icon"
                android:src="@drawable/ic_chat"
                android:contentDescription="Chat"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </LinearLayout>

        <!-- BOTTOM BAR -->
        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- LEFT: GARDEN -->
            <ImageButton
                android:id="@+id/btnGarden"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_round_icon"
                android:src="@drawable/ic_garden"
                android:contentDescription="Garden"
                android:layout_marginEnd="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFeed"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:text="FEED"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="24dp"
                style="@style/PrimaryButton"/>


            <!-- RIGHT: PLANT / SEED -->
            <ImageButton
                android:id="@+id/btnPlant"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_round_icon"
                android:src="@drawable/ic_seed"
                android:contentDescription="Plant Seed"
                android:layout_marginStart="16dp"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
