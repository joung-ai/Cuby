<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ROOM BACKGROUND (STATIC) -->
    <com.example.cuby.ui.room.RoomBackgroundView
        android:id="@+id/roomBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- FOREGROUND UI -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/ivCuby"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- SPEECH BUBBLE -->
            <TextView
                android:id="@+id/tvCubyBubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_speech_bubble"
                android:padding="12dp"
                android:text="Hello!"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:visibility="gone"
                android:layout_marginBottom="6dp" />

            <!-- MOOD BUTTONS (TELL-TALE) -->
            <LinearLayout
                android:id="@+id/layoutMoodButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvCubyBubble"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp">

                <!-- Layer 1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCalm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calm"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="3dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOkay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Okay"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="3dp"/>

                </LinearLayout>

                <!-- Layer 2 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTired"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tired"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="3dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOverwhelmed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overwhelmed"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="3dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnHappy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Happy"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="3dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/cubyShadow"
            android:layout_width="140dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_shadow_oval"
            android:alpha="0.35"
            android:elevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/ivCuby"
            app:layout_constraintStart_toStartOf="@id/ivCuby"
            app:layout_constraintEnd_toEndOf="@id/ivCuby"
            android:translationY="-55dp"/>

        <ImageView
            android:id="@+id/ivCuby"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="100dp"
            android:elevation="4dp"
            android:src="@drawable/cuby_idle"
            app:layout_constraintBottom_toTopOf="@id/bottomBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/floatingActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_settings"
                android:scaleType="fitCenter"
                android:contentDescription="Settings"/>

            <ImageButton
                android:id="@+id/btnAlarm"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Alarm"
                android:paddingLeft="4dp"
                android:paddingTop="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_clock" />

            <ImageButton
                android:id="@+id/btnChat"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Chat"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_chat" />

            <ImageButton
                android:id="@+id/btnMemoryGame"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/memory_game_button"
                android:src="@drawable/ic_memory_game"
                app:layout_constraintTop_toBottomOf="@id/btnChat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/btnChat" />


        </LinearLayout>

        <!-- BOTTOM BAR -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- CONTENT WRAPPER (LIMITED WIDTH) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottomBarContent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_max="720dp">

                <!-- GARDEN -->
                <ImageButton
                    android:id="@+id/btnGarden"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_garden"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- DIARY -->
                <ImageButton
                    android:id="@+id/btnDiary"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_diary"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toEndOf="@id/btnGarden"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp"/>

                <!-- FEED -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFeed"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:text="FEED"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:cornerRadius="24dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    app:elevation="4dp"
                    app:strokeWidth="1dp"
                    app:layout_constraintStart_toEndOf="@id/btnDiary"
                    app:layout_constraintEnd_toStartOf="@id/btnMeditate"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginHorizontal="12dp"/>

                <!-- MEDITATE -->
                <ImageButton
                    android:id="@+id/btnMeditate"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_meditate"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toStartOf="@id/btnProductive"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="8dp"/>

                <!-- PRODUCTIVITY -->
                <ImageButton
                    android:id="@+id/btnProductive"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_productivity"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
