<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ROOM BACKGROUND (STATIC) -->
    <com.example.cuby.ui.room.RoomBackgroundView
        android:id="@+id/roomBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- FOREGROUND UI -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <!-- TOP RIGHT MENU (Vertical Stack) -->
        <LinearLayout
            android:id="@+id/menuStack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Settings -->
            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                android:background="@drawable/bg_transparent_ripple"
                android:src="@drawable/ic_settings"
                android:scaleType="fitCenter"
                android:padding="8dp"
                app:tint="@color/mockup_lime"
                android:contentDescription="Settings" />

            <!-- Chat -->
            <ImageButton
                android:id="@+id/btnChat"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/bg_transparent_ripple"
                android:src="@drawable/ic_chat"
                android:scaleType="fitCenter"
                android:padding="8dp"
                app:tint="@color/mockup_lime"
                android:contentDescription="Chat" />

            <!-- Activity (Placeholder using 'garden') -->
            <ImageButton
                android:id="@+id/btnActivity"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/bg_transparent_ripple"
                android:src="@drawable/ic_garden"
                android:scaleType="fitCenter"
                android:padding="8dp"
                app:tint="@color/mockup_lime"
                android:contentDescription="Activity" />

            <!-- Timer (Placeholder using 'chat' for now until actual icon added) -->
            <ImageButton
                android:id="@+id/btnTimer"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/bg_transparent_ripple"
                android:src="@drawable/ic_chat"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:visibility="gone"
                app:tint="@color/mockup_lime"
                android:contentDescription="Timer" />

        </LinearLayout>


        <!-- SPEECH BUBBLE (Centered Blue Pill) -->
        <TextView
            android:id="@+id/tvCubyBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_speech_bubble_blue"
            android:text="Hello!"
            android:textSize="@dimen/text_heading"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/ivCuby"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/margin_medium" />

        <!-- MOOD BUTTONS (TELL-TALE) -->
        <!-- This section was removed as per the instructions -->

        <View
            android:id="@+id/cubyShadow"
            android:layout_width="@dimen/cuby_shadow_width"
            android:layout_height="@dimen/cuby_shadow_height"
            android:background="@drawable/bg_shadow_oval"
            android:alpha="0.35"
            android:elevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/ivCuby"
            app:layout_constraintStart_toStartOf="@id/ivCuby"
            app:layout_constraintEnd_toEndOf="@id/ivCuby"
            android:translationY="@dimen/cuby_shadow_translation_y" />


        <ImageView
            android:id="@+id/ivCuby"
            android:layout_width="@dimen/cuby_home_size"
            android:layout_height="@dimen/cuby_home_size"
            android:layout_marginBottom="@dimen/margin_medium"
            android:elevation="4dp"
            android:src="@drawable/cuby_idle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.85" />

        <!-- This section was replaced by the new menuStack -->

        <!-- This empty LinearLayout was removed as per the instructions -->

        <!-- BOTTOM BAR (Blue Background) -->
        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_bar_height"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/mockup_blue"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- LEFT: Notebook/Diary -->
            <ImageButton
                android:id="@+id/btnGarden"
                android:layout_width="@dimen/icon_button_large_size"
                android:layout_height="@dimen/icon_button_large_size"
                android:background="@drawable/bg_transparent_ripple"
                android:src="@drawable/ic_garden"
                android:scaleType="fitCenter"
                android:padding="12dp"
                android:contentDescription="Garden"
                app:tint="@color/mockup_lime"
                android:layout_marginEnd="@dimen/margin_standard" />

            <!-- CENTER: FEED (White Pill Button) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFeed"
                android:layout_width="@dimen/feed_button_width"
                android:layout_height="@dimen/feed_button_height"
                android:text="FEED"
                android:textSize="@dimen/text_subheading"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:backgroundTint="@color/white"
                app:cornerRadius="32dp"
                android:stateListAnimator="@null"
                android:elevation="0dp" />


            <!-- RIGHT: Plant -->
            <ImageButton
                android:id="@+id/btnPlant"
                android:layout_width="@dimen/icon_button_large_size"
                android:layout_height="@dimen/icon_button_large_size"
                android:background="@drawable/bg_transparent_ripple"
                android:src="@drawable/ic_seed"
                android:scaleType="fitCenter"
                android:padding="12dp"
                android:contentDescription="Plant Seed"
                app:tint="@color/mockup_lime"
                android:layout_marginStart="@dimen/margin_standard" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>