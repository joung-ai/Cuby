<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_notebook">

    <Switch
        android:id="@+id/swCubyMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write with Cuby"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/tvCubyPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuby asks..."
        android:textColor="#5D4037"
        android:textStyle="italic"
        android:background="#FFF3E0"
        android:padding="10dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/etContent"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:gravity="top|start"
        android:hint="Dear Diaryâ€¦"
        android:textColor="#3E2723"
        android:textColorHint="#9E9E9E"
        android:textSize="15sp"
        android:lineSpacingExtra="8dp"
        android:inputType="textMultiLine"
        android:background="@drawable/bg_notebook_lines"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Delete"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"

        app:cornerRadius="20dp"
        app:backgroundTint="@color/red_soft"
        app:rippleColor="#33FFFFFF"

        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:elevation="2dp"/>

</LinearLayout>
