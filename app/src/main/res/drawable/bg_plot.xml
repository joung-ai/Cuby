<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ðŸŒ‘ Deep dirt base (compressed soil) -->
    <item
        android:left="10dp"
        android:top="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#5A3A24"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>

    <!-- ðŸŒ˜ Inner dirt wall (rough depth) -->
    <item
        android:left="7dp"
        android:top="7dp"
        android:right="7dp"
        android:bottom="9dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6B4A32"
                android:endColor="#4A2F1E"
                android:angle="270"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- ðŸŸ¤ Main soil surface (packed dirt) -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#C9A26A"
                android:centerColor="#B08955"
                android:endColor="#8A623A"
                android:angle="270"/>
            <corners android:radius="14dp"/>
            <!-- softened edge, not a UI stroke -->
            <stroke
                android:width="1dp"
                android:color="#6F4A2F"/>
        </shape>
    </item>

</layer-list>
