<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="200dp"
    android:height="200dp"
    android:viewportWidth="200"
    android:viewportHeight="200">

    <!-- BODY: Gradient -->
    <path
        android:pathData="M40,60 Q40,40 60,40 L140,40 Q160,40 160,60 L160,140 Q160,160 140,160 L60,160 Q40,160 40,140 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="100"
                android:startY="40"
                android:endX="100"
                android:endY="160">
                <item android:offset="0.0" android:color="#42A5F5" />
                <item android:offset="1.0" android:color="#1976D2" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- HIGHLIGHT -->
    <path
        android:pathData="M50,60 Q50,50 60,50 L120,50 Q60,50 50,90 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="50"
                android:startY="50"
                android:endX="90"
                android:endY="90">
                <item android:offset="0.0" android:color="#80FFFFFF" />
                <item android:offset="1.0" android:color="#00FFFFFF" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- EYES (Dark Blue, Large Circles) -->
    <path
        android:fillColor="#0D47A1"
        android:pathData="M70,90 m-15,0 a15,15 0 1,0 30,0 a15,15 0 1,0 -30,0" />
    <path
        android:fillColor="#FFFFFF"
        android:pathData="M65,85 m-5,0 a5,5 0 1,0 10,0 a5,5 0 1,0 -10,0" />

    <path
        android:fillColor="#0D47A1"
        android:pathData="M130,90 m-15,0 a15,15 0 1,0 30,0 a15,15 0 1,0 -30,0" />
    <path
        android:fillColor="#FFFFFF"
        android:pathData="M125,85 m-5,0 a5,5 0 1,0 10,0 a5,5 0 1,0 -10,0" />

    <!-- MOUTH (Clean D Shape - Deepened for Tongue) -->
    <!-- Control Point 185 -> Vertex approx 150 -->
    <path
        android:fillColor="#0D47A1"
        android:pathData="M60,115 Q100,185 140,115 Q100,115 60,115 Z" />

    <!-- Tongue (Red) - Strictly inside -->
    <!-- Control Point 158 -> Vertex approx 148 -->
    <path
        android:fillColor="#EF5350"
        android:pathData="M80,138 Q100,158 120,138 Q100,133 80,138" />

</vector>